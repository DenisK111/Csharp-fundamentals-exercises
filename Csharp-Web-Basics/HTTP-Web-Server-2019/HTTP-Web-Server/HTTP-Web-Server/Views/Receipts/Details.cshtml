  

    <main class="mt-3">
        <h1 class="text-center">Receipt Details</h1>
        <hr class="bg-musaca w-50 hr-2"/>
         @foreach (var item in Model.Product)
    {
       <div class="product  justify-content-between">
            <div class="product-name d-flex mx-auto w-25">
                <h4>@item.name</h4>
            </div>
            <div class="product-quantity-and-price d-flex justify-content-end w-25">
                <h4 class="text-center w-50">x@item.quantity</h4>
                <h4 class="text-center w-50">$@item.price</h4>
            </div>
        </div>
    }
        <hr class="bg-musaca w-50 hr-2"/>
        <div class="product d-flex justify-content-between">
            <div class="product-name mx-auto w-25">
                <h4>Total</h4>
            </div>
            <div class="product-quantity-and-price d-flex justify-content-end w-25">
                
                <h4 class="text-center mx-auto w-25">$@Model.Total</h4>
            </div>
        </div>
        <hr class="bg-musaca w-50 hr-2"/>
        <div class="product d-flex justify-content-between">
            <div class="product-name w-75">
                <h4>Issued On</h4>
            </div>
            <div class="product-quantity-and-price d-flex justify-content-end w-25">
                
                <h4 class="text-center w-50">$@Model.IssuedOn</h4>
            </div>
        </div>
        <div class="product d-flex justify-content-between">
            <div class="product-name w-75">
                <h4>Cashier</h4>
            </div>
            <div class="product-quantity-and-price d-flex justify-content-end w-25">
                
                <h4 class="text-center w-50">$@Model.Cashier</h4>
            </div>
        </div>
        <hr class="bg-musaca w-50 hr-2"/>
        <div class="product d-flex justify-content-between">
            <div class="product-name w-75">
                <h4>Receipt</h4>
            </div>
            <div class="product-quantity-and-price d-flex justify-content-end w-25">
                
                <h4 class="text-center w-50">@Model.Id</h4>
            </div>
        </div>
    </main>
    

