<main class="mt-3">
    <h1 class="text-center text-musaca">Greetings, @User</h1>
    <hr class="hr-2 bg-musaca">
    <div class="d-flex justify-content-between">
        <table class="table table-hover table-bordered border-musaca">
            <thead>
                <tr class="row text-musaca">
                    <th scope="col" class="col-lg-5 d-flex justify-content-center"><h3>Id</h3></th>
                    <th scope="col" class="col-lg-2 d-flex justify-content-center"><h3>Total</h3></th>
                    <th scope="col" class="col-lg-2 d-flex justify-content-center"><h3>Issued On</h3></th>
                    <th scope="col" class="col-lg-2 d-flex justify-content-center"><h3>Cashier</h3></th>
                    <th scope="col" class="col-lg-1 d-flex justify-content-center"><h3>Actions</h3></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var entry in Model)
                {
                    <tr class="row">
                        <th scope="row" class="col-lg-5 d-flex justify-content-center"><h5>@entry.Id</h5></th>
                        <td class="col-lg-2 d-flex justify-content-center"><h5>$@entry.Total</h5></td>
                        <td class="col-lg-2 d-flex justify-content-center"><h5>@entry.IssuedOn</h5></td>
                        <td class="col-lg-2 d-flex justify-content-center"><h5>@entry.Cashier</h5></td>
                        <td class="col-lg-1 d-flex justify-content-center">
                            <form action="../Receipts/Details" method="get">
                                <button type="submit" class="btn bg-musaca text-white" value=@entry.Id name="id">Details</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</main>
